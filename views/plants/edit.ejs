<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
 <%- include('../partials/head.ejs') %>
  </head>
  <body>
    <div class="container">
        <%- include ('../partials/border.ejs') %>
      <div class="header">
          <nav>
          <%- include ('../partials/nav.ejs') %>
          </nav>
      </div>
      <div class="edit-header">
          <h1><%=plant.name%></h1><br>
          <h2>Edit Care Instructions.</h2>
      </div>

        <form action="/plants/<%=plant._id%>?_method=PUT" method="POST">
        <label for="name">Name:</label>
        <input type="text" name="name" value="<%=plant.name%>" />
        <label for="description">Description:</label>
        <input type="text" name="description" value="<%=plant.description%>"/>
        <input type="submit" name="Edit" value="Edit">
    </form>

    <footer>
      <%- include ('../partials/footer.ejs') %>
    </footer>

  </div>
  </body>
</html>
